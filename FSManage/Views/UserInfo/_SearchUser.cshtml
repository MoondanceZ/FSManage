<section id="userSearch" style="display:none" class="userDiv">
    <form action="/UserInfo/Search" class="uesr_search">
        <div class="alert alert-info" role="alert">
            <strong>技巧提示：</strong>
            支持模糊搜索和匹配搜索 ！
        </div>       
        <div class="form-group">
            <label for="uid">UID</label>
            <input type="text" id="uid" name="uid" class="form-control" placeholder="输入用户UID">
        </div>
        <div class="form-group">
            <label for="yonghuzu">选择用户组</label>
            <select id="yonghuzu" class="form-control">
                <option>限制会员</option>
                <option>新手上路</option>
                <option>组册会员</option>
                <option>中级会员</option>
                <option>高级会员</option>
            </select>
        </div>
        <button type="submit" class="btn btn-default">提交</button>
    </form>
</section>
